<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.androidbasicsudacityprojectfour">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RockActivity"
            android:label="@string/genre_rock"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".CountryActivity"
            android:label="@string/genre_country"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".PopActivity"
            android:label="@string/genre_pop"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".FolkActivity"
            android:label="@string/genre_folk"
            android:parentActivityName=".MainActivity" />
    </application>

</manifest>